<odoo>
    <data>
  <record id="employee_generate_travel_request_email" model="mail.template">
    <field name="name">Generate Travel Email Template</field>
    <field name="model_id" ref="employee_travel_request.model_travel_request"/>
    <field name="subject">Travel Approve request from {{object.employee_id.name}}</field>
    <field name="email_from">{{object.employee_id.work_email}}</field>
    <field name="email_to">{{object.employee_id.parent_id.work_email}}</field>
    <field name="body_html"><![CDATA[
        <p>Dear HR,</p>
        <p>Please review and proceed with my travel request { object.travel_request_name } for the following date period:</p>
             <p>Start Date: {{ object.start_date }}</p>
        <p>End Date: {{ object.end_date }}</p>
        <p>Travel Description: {{ object.description }}</p>
    ]]></field>
</record>

    </data>
</odoo>
