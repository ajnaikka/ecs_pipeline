<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_general_announcement_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.general.announcement.wizard.form</field>
        <field name="model">hr.employee.general.announcement.wizard</field>
        <field name="arch" type="xml">
            <form string="General Announcement">
                <sheet>
                    <group>
                        <field name="subject"/>
                        <field name="user_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="save_announcement" string="Send" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_employee_general_announcement_wizard" model="ir.actions.act_window">
        <field name="name">General Announcement</field>
        <field name="res_model">hr.employee.general.announcement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_employee_general_announcement_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
