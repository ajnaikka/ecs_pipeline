<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_birthdate_filter_wizard_form" model="ir.ui.view">
        <field name="name">Employee Birthdate Filter Wizard Form</field>
        <field name="model">hr.employee.birthdate.filter.wizard</field>
        <field name="arch" type="xml">
            <form string="Employee Birthdate Filter Wizard">
                <group>
                    <group>
                        <field name="type"/>
                        <field name="from_date"/>
                        <field name="to_date"/>

                    </group>

                </group>
                <footer>
                    <button name="apply_filter" string="Apply Filter" type="object" class="btn-primary"/>
                    <button name="upcoming_month" string="Upcoming Month" type="object" class="btn-primary"/>
                    <button name="current_month" string="Current Month" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_employee_birthdate_filter_wizard" model="ir.actions.act_window">
        <field name="name">Employee Birthdate Filter Wizard</field>
        <field name="res_model">hr.employee.birthdate.filter.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_employee_birthdate_filter_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>