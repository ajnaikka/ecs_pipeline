<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_probation_details_tree" model="ir.ui.view">
            <field name="name">employee.probation.details.tree</field>
            <field name="model">employee.probation.details</field>
            <field name="arch" type="xml">
                <tree string="Employee Probation Details" create="0" delete="1">
                    <field name="date"/>

                    <field name="employee_id"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                    <field name="user_ids" column_invisible="1" widget="many2many_tags"/>
                </tree>
            </field>
        </record>


        <record id="action_employee_probation_details" model="ir.actions.act_window">
            <field name="name">Employee Probation Details</field>
            <field name="res_model">employee.probation.details</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_employee_probation_details" name="Employee Probation Info"
                  action="action_employee_probation_details" parent="hr.menu_hr_employee_payroll" sequence="3"/>

        <record id="view_employee_certificate_tree" model="ir.ui.view">
            <field name="name">employee.certificate.details.tree</field>
            <field name="model">employee.certificate.details</field>
            <field name="arch" type="xml">
                <tree string="Employee Certificate Details" default_order="create_date desc">
                    <field name="date"/>

                    <field name="send_to"/>
                    <field name="company_id"/>
                    <field name="mail_displayed"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                    <field name="user_id"/>

                    <button name="action_generate_certificate" type="object" string="Generate Certificate And Send Mail"
                            class="float-end btn-primary" groups="infinous_user_groups.assigment_hr"/>


                </tree>
            </field>
        </record>

        <record id="action_employee_certificate" model="ir.actions.act_window">
            <field name="name">Employee Certificates</field>
            <field name="res_model">employee.certificate.details</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_employee_certificate_tree"/>
        </record>

        <menuitem id="menu_employee_certificate_request_details" name="Employee Certificate Info"
                  action="action_employee_certificate" parent="hr.menu_hr_employee_payroll"
                  groups="infinous_user_groups.reporting_manager,infinous_user_groups.assigment_hr" sequence="5"/>


        <record id="certificate_generation_view_form" model="ir.ui.view">
            <field name="name">certificate.generation.view.form</field>
            <field name="model">certificate.generations</field>
            <field name="arch" type="xml">
                <form string="Certificate Generation">
                    <header>
                        <button name="%(inf_employee_certificate_request.action_employee_certificate_generation)d"
                                type="action" string="Print Pdf"
                                class="btn-primary" data-hotkey="q"

                        />

                        <button name="action_send_mail" type="object" string="Send Mail"
                                class="btn-primary"

                        />
                    </header>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="purpos"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="certificate_generation_action" model="ir.actions.act_window">
            <field name="name">Certificate Generation</field>
            <field name="res_model">certificate.generations</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="certificate_generation_view_form"/>
        </record>

    </data>
</odoo>
