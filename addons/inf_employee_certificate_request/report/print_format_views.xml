<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="infinews_certificate_generation_pdf_paperformat" model="report.paperformat">
            <field name="name">Employee Certificate Generation</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_employee_certificate_generation" model="ir.actions.report">
            <field name="name">Employee Certificate Generation</field>
            <field name="model">certificate.generations</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">inf_employee_certificate_request.print_generate_certificate</field>
            <field name="report_file">inf_employee_certificate_request.print_generate_certificate</field>
            <field name="print_report_name">'Employee Certificate- %s' % (object.employee_id.name).replace('/', '')
            </field>
            <field name="paperformat_id"
                   ref="inf_employee_certificate_request.infinews_certificate_generation_pdf_paperformat"/>
            <field name="binding_model_id" ref="inf_employee_certificate_request.model_certificate_generations"/>
            <field name="binding_type">report</field>
        </record>


    </data>


</odoo>