<odoo>
    <data>
        <record model="ir.ui.view" id="core_openeducat_crm_lead_form">
            <field name="name">core.openeducat.crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet/group" position="inside">
                    <group attrs="{'invisible': [('type', '=', 'lead')]}" name="application_details">
                        <field name="branch" attrs="{'required':[('type', '=', 'opportunity')]}"/>
                        <field name="admission_register" attrs="{'required':[('type', '=', 'opportunity')]}"/>
                        <field name="application_for_admission" attrs="{'required':[('type', '=', 'opportunity')]}"/>
                        <field name="course_fees" readonly="1" force_save="1"/>
                    </group>
                </xpath>
                <xpath expr="//button[@name='action_set_won_rainbowman']" position="before">
                    <button string="Send by Email" name="action_send_mail" type="object" class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                    <button string="Create Student" name="action_create_student" type="object"
                            class="oe_highlight" />
                    <button string="Update Student Details" name="action_update_student" type="object"
                            class="oe_highlight"  attrs="{'invisible':[('student_id', '=', False)]}"/>
                </xpath>

                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                    <field name="contact_name"/>
                    <field name="student_id" invisible="1"/>
                    <field name="partner_correspondence_address" invisible="1"/>
                    <field name="partner_permanent_address" invisible="1"/>
                </xpath>

                <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position="attributes">
                    <attribute name="required">False</attribute>
                    <attribute name="string">Student</attribute>
                </xpath>

                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="attributes">
                    <attribute name="required">False</attribute>
                    <attribute name="string">Student</attribute>
                </xpath>

                <xpath expr="//page[@name='lead']//field[@name='country_id']" position="after">
                    <field name="nationality" placeholder="Nationality"/>
                </xpath>

                <xpath expr="//group[@name='lead_info']//field[@name='function']" position="after">
                    <field name="working_dept"/>
                    <field name="residential_no" widget="phone" string="Residential No"/>
                    <!--                <field name="contact_off_no"/>-->
                    <field name="contact_ll_no"/>
                    <field name="is_student" invisible="1"/>
                    <field name="send_status" invisible="1"/>
                </xpath>

                <xpath expr="//group[@name='lead_partner']//field[@name='street2']" position="after">
                    <field name="landmark" placeholder="Landmark"/>
                </xpath>

                <xpath expr="//group[@name='lead_partner']//field[@name='street']" position="before">
                    <field name="house_no" placeholder="House No"/>
                    <field name="house_name" placeholder="House Name"/>
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="course_type"/>
                </xpath>

                <xpath expr="//page[@name='lead']" position="after">
                    <page name="application_details" string="Application Details">
                        <group>
                            <group name="other" string="Other" priority="1">
                                <field name="branch"/>
                                <field name="batch_code"/>
                                <field name="admission_register"/>
                                <field name="course_fees" readonly="1" force_save="1"/>
                                <field name="application_for_admission"/>
                                <field name="submission_date"/>
                                <field name="place"/>
                            </group>

                            <group string="Specialization" name="specialization">
                                <field name="specialization1"/>
                                <field name="specialization2"/>
                                <field name="specialization3"/>
                                <field name="specialization4"/>
                            </group>

                        </group>
                        <group name="personal_details" string="Personal Details" priority="3">
                            <group>
                                <field name="dob"/>
                                <field name="gender"/>
                                <field name="marital_status"/>
                                <field name="fath_or_hus_name"/>
                                <field name="facebook_id"/>
                                <field name="whatsapp_id"/>
                            </group>

                            <group>
                                <field name="exam_option"/>
                                <field name="mode_of_payment"/>
                                <field name="bank_name"/>
                                <field name="fees_paid"/>
                            </group>
                        </group>

                        <group name="pdc_details" string="PDC Details" priority="3">
                            <group name="pdc_first" string="PDC First">
                                <field name="pdc_first_cheque_no"/>
                                <field name="pdc_first_cheque_date"/>
                                <field name="pdc_first_cheque_amount"/>
                            </group>
                            <group name="pdc_second" string="PDC Second">
                                <field name="pdc_second_cheque_no"/>
                                <field name="pdc_second_cheque_date"/>
                                <field name="pdc_second_cheque_amount"/>
                            </group>
                            <group name="pdc_third" string="PDC Third">
                                <field name="pdc_third_cheque_no"/>
                                <field name="pdc_third_cheque_date"/>
                                <field name="pdc_third_cheque_amount"/>
                            </group>
                        </group>


                    </page>
                </xpath>

                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="contact_address" string="Contacts &amp; Addresses">
                        <group name="permanent_address" string="Permanent Address" priority="1">
                            <group>
                                <field name="house_no_1" placeholder="House No"/>
                                <field name="house_name_1" placeholder="House Name"/>
                                <field name="street_or_road" placeholder="Street or Road"/>
                                <field name="landmark_1" placeholder="Landmark"/>
                                <field name="place_1" placeholder="Place"/>
                                <field name="city_1" placeholder="City"/>
                                <field name="state_id_1" placeholder="State"/>
                                <field name="zip_1" placeholder="Zip"/>

                            </group>
                        </group>
                    </page>
                </xpath>


                <xpath expr="//page[@name='application_details']" position="after">
                    <page name="academic_details" string="Academic Details">
                        <field name="academic_details_line">
                            <tree editable="bottom">
                                <field name="academic_details_id"/>
                                <field name="degree"/>
                                <field name="name_of_school"/>
                                <field name="exam_month"/>
                                <field name="exam_year"/>
                                <field name="subject"/>
                                <field name="result"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//page[@name='academic_details']" position="after">
                    <page name="work_experience_details" string="Work Experience Details">
                        <field name="work_experience_details_line" width="50" create="false" delete="false">
                            <tree editable="bottom" width="50">
                                <field name="work_experience_details_id"/>
                                <field name="company_name"/>
                                <field name="designation"/>
                                <field name="no_of_years"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//page[@name='work_experience_details']" position="after">
                    <page name="student_employment_details" string="Student Employment Details">
                        <group>
                            <group name="current_comnpany_address">
                                <field name="company_name"/>
                                <label for="street" string="Company Address"/>
                                <div class="o_address_format">

                                    <field name="company_add1"/>
                                    <field name="company_add2"/>
                                    <field name="company_add3"/>
                                    <field name="company_add4"/>
                                    <field name="company_add5"/>

                                </div>
                                <field name="company_phone_no"/>
                                <!--                        <field name="designation"/>-->

                            </group>


                        </group>


                        <group>
                            <label for="reference_no1" string="Reference No."/>
                            <group name="Reference_numbers_part1">
                                <field name="reference_no1"/>
                                <field name="reference_no2"/>
                                <field name="reference_no3"/>
                            </group>

                            <group name="Reference_numbers_part1">
                                <field name="reference_no4"/>
                                <field name="reference_no5"/>
                                <field name="reference_no6"/>
                            </group>

                        </group>


                    </page>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="quick_create_crm_opportunity_form">
            <field name="name">quick.create.crm.opportunity.inherit.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='partner_id']" position="attributes">
                    <attribute name="string">Student</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="case_tree_opportunity_form">
            <field name="name">case.tree.view.inherit.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='partner_id']" position="attributes">
                    <attribute name="string">Student</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="case_opportunity_filter_inherit_form">
            <field name="name">case.opportunity.filter.inherit.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Student</attribute>
                </xpath>
                <xpath expr="//group/filter[@name='salesperson']" position="attributes">
                    <attribute name="string">Counsellor</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_case_leads_filter_inherit_form">
            <field name="name">crm.case.leads.filter.inherit.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[@name='salesperson']" position="attributes">
                    <attribute name="string">Counsellor</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>