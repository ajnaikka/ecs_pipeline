<odoo>
    <data>
        <!--    Form View-->
        <record id="course_type_form_view" model="ir.ui.view">
            <field name="name">Op.Course.Type</field>
            <field name="model">op.course.type</field>
            <field name="arch" type="xml">
                <form string="Course_Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>


        <!--       Tree View-->
        <record id="course_type_tree_view" model="ir.ui.view">
            <field name="name">op_course_type.tree</field>
            <field name="model">op.course.type</field>
            <field name="arch" type="xml">
                <tree string="Course Type">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>


        <!--        Search View-->
        <record id="course_type_search_view" model="ir.ui.view">
            <field name="name">op_course_type.search</field>
            <field name="model">op.course.type</field>
            <field name="arch" type="xml">
                <search string="Course Type">
                    <group expand="0" string="Extended Filters...">
                        <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                        <field name="code" filter_domain="[('code', 'ilike', self)]"/>
                    </group>
                    <group expand="0" string="Group By">
                        <filter name="group_by_course_type_name"
                                string="name" domain="[]"/>
                        <!--                                context="{'group_by':'name'}"/>-->
                        <filter name="group_by_course_type_code"
                                string="code" domain="[]"/>
                        <!--                                context="{'group_by':'code'}"/>-->
                    </group>
                </search>
            </field>
        </record>


        <!--      INHERIT COURSE FORM-->
        <record model="ir.ui.view" id="course_type_in_course_form">
            <field name="name">op.course</field>
            <field name="model">op.course</field>
            <field name="inherit_id" ref="openeducat_core.view_op_course_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="course_type"/>

                </xpath>
            </field>
        </record>

        <!--      INHERIT COURSE TREE-->
        <record model="ir.ui.view" id="course_type_in_course_tree">
            <field name="name">op.course.tree</field>
            <field name="model">op.course</field>
            <field name="inherit_id" ref="openeducat_core.view_op_course_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="course_type"/>

                </xpath>
            </field>
        </record>


        <!--      Menu Action-->
        <record id="act_open_op_course_type_view" model="ir.actions.act_window">
            <field name="name">Course Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.course.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="course_type_search_view"/>
        </record>


        <!--             Menu Items-->
        <menuitem id="menu_op_course_type_sub"
                  name="Course Type"
                  parent="openeducat_core.menu_op_school_config_course"
                  sequence="9"
                  action="act_open_op_course_type_view"
                  groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin"/>


    </data>
</odoo>