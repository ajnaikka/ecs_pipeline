<odoo>
  <data>
    <record model="ir.ui.view" id="openeducat_partner_form">
      <field name="name">openeducat.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">

          <xpath expr="//form//sheet//group[2]/field[@name='mobile']" position="after">
            <field name="residential_no"/>
        </xpath>


        <xpath expr="//page[@name='contact_addresses']//group/group/field[@name='mobile']" position="after">
            <field name="house_no" placeholder="House No"/>
             <field name="house_name" placeholder="House Name"/>
        </xpath>

            <xpath expr="//field[@name='country_id']" position="after">
              <field name="nationality" placeholder="Nationality"/>
          </xpath>

           <xpath expr="//field[@name='street2']" position="after">
              <field name="landmark" placeholder="landmark"/>
          </xpath>



         <xpath expr="//page[@name='internal_notes']" position="after">
           <page name="other_details" string="Other Details">
               <group>
                    <group  name="other" string="Other"  priority="1">

                           <field name="branch"/>
                          <field name="batch_code"/>
                          <field name="application_for_admission"/>


                    </group>

                    <group string="Specialization" name="specialization" >
                         <field name="specialization1"/>
                   <field name="specialization2"/>
                   <field name="specialization3"/>
                   <field name="specialization4"/>
                                </group>

               </group>




             <group name="personal_details" string="Personal Details"  priority="3">
               <group>
                  <field name="dob"/>
                <field name="gender"/>
                <field name="marital_status"/>
                <field name="fath_or_hus_name"/>
                <field name="facebook_id"/>
                <field name="whatsapp_id"/>
               </group>


             </group>

           </page>
        </xpath>

      </field>
    </record>

  </data>
</odoo>