<odoo>
    <data>
        <!--   Specialization Form View-->
        <record id="specialization_form_view" model="ir.ui.view">
            <field name="name">Op.specialization</field>
            <field name="model">op.specialization</field>
            <field name="arch" type="xml">
                <form string="Specialization">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="course_id"/>
                            <field name="type" attrs="{'readonly':[('category','!=','specialization')]}"/>
                            <field name="subject_type" attrs="{'readonly':[('category','!=','specialization')]}"/>
                            <field name="grade_weightage" attrs="{'readonly':[('category','!=','specialization')]}"/>
                            <field name="marks_in"/>


                        </group>
                    </sheet>
                </form>
            </field>

        </record>


        <!--       Tree View-->
        <record id="specialization_tree_view" model="ir.ui.view">
            <field name="name">op_specialization.tree</field>
            <field name="model">op.specialization</field>
            <field name="arch" type="xml">
                <tree string="Specialization">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="type"/>
                    <field name="subject_type"/>
                    <field name="marks_in"/>
                    <field name="grade_weightage"/>
                </tree>
            </field>
        </record>


        <!--        Search View-->
        <record id="specialization_search_view" model="ir.ui.view">
            <field name="name">op_specialization.search</field>
            <field name="model">op.specialization</field>
            <field name="arch" type="xml">
                <search string="Specialization">
                    <group expand="0" string="Extended Filters...">
                        <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                        <field name="code" filter_domain="[('code', 'ilike', self)]"/>
                    </group>
                    <group expand="0" string="Group By">
                        <filter name="group_by_specialization_name"
                                string="name" domain="[]"/>
                        <!--                                context="{'group_by':'name'}"/>-->
                        <filter name="group_by_specialization_code"
                                string="code" domain="[]"/>
                        <!--                                context="{'group_by':'code'}"/>-->
                    </group>
                </search>
            </field>
        </record>


        <!--   Course Form View-->
        <record id="course_specialization_form" model="ir.ui.view">
            <field name="name">op.course.form</field>
            <field name="model">op.course</field>
            <field name="inherit_id" ref="openeducat_core.view_op_course_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='subject']" position="after">
                    <page string="Specialization" name="specialization">
                        <field name="specialization_ids" nolabel="1" readonly="1"/>
                    </page>
                </xpath>
            </field>
        </record>


        <!--      Menu Action-->
        <record id="act_open_op_specialization_view" model="ir.actions.act_window">
            <field name="name">Specialization</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.specialization</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="specialization_search_view"/>
        </record>


        <!--             Menu Items-->
        <menuitem id="menu_op_specialization_sub"
                  name="Specialization"
                  parent="openeducat_core.menu_op_school_config_course"
                  sequence="11"
                  action="act_open_op_specialization_view"
                  groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin"/>


    </data>
</odoo>
