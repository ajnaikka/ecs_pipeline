<odoo>
    <data>
        <record id="student_connect_lms_wizard_view" model="ir.ui.view">
            <field name="name">student.connect.lms.wizard.form</field>
            <field name="model">student.connect.lms.wizard</field>
            <field name="arch" type="xml">
                <form string="Connect to LMS">
                    <group>
                        <group>
                            <field name="connect_to_lms"/>
                            <field name="slide_channel_id"/>
                        </group>
                        <group>
                            <field name="admission_id" readonly="1"/>
                            <field name="course_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_connect_to_lms" type="object" string="Connect to LMS" class="btn-primary" data-hotkey="q"/>
                        <button class="btn-secondary" special="cancel" data-hotkey="z" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_student_connect_lms_wizard" model="ir.actions.act_window">
            <field name="name">Connect to LMS</field>
            <field name="res_model">student.connect.lms.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="student_connect_lms_wizard_view"/>
        </record>
    </data>
</odoo>