<odoo>
    <data>
        <record id="application_student_connect_lms_form_view" model="ir.ui.view">
            <field name="name">op.admission.connect.lms</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="%(action_student_connect_lms_wizard)d" string="Connect to LMS" type="action"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'done'), ('lms_connected', '=', True)]}"/>
                </xpath>
                <xpath expr="//group/field[@name='register_id']" position="after">
                    <field name="lms_connected" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='admission_detail']/group" position="inside">
                    <div role="alert" class="alert alert-info"
                         attrs="{'invisible': [('lms_connected', '=', False)]}">
                        <p>
                            <b>Connected to LMS</b>
                        </p>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>