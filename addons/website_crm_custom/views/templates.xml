<odoo>
    <data>
        <template name="Course Enquiry" id="course_join_enquiry" inherit_id="website_slides.course_join">
            <!-- Channel main template: override button to join channel -->
            <xpath expr="//div[hasclass('o_wslides_js_course_join')]/a[hasclass('o_wslides_js_course_join_link')]"
                   position="attributes">
                <attribute name="t-if">not channel.is_member and channel.enroll == 'public' and not
                    channel.hide_enroll_course
                </attribute>
            </xpath>

            <xpath expr="//div[hasclass('o_wslides_js_course_join')]" position="inside">
                <div class="container" align="center">
                    <a t-if="not channel.is_member and channel.enroll == 'public'" t-att-href="'/contactus?name=%s' % (channel.name)" class="btn btn-primary">Enquiry</a>
                </div>
            </xpath>
        </template>

        <template id="course_buy_course_button_hide"
                  inherit_id="asbm_website_course_sale.course_buy_course_button_inherit">
            <xpath expr="//a[@id='add_to_cart']" position="attributes">
                <attribute name="t-if">not channel.hide_enroll_course</attribute>
            </xpath>
        </template>
    </data>
</odoo>