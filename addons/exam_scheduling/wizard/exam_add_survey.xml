<odoo>
    <data>
        <record id="exam_add_survey_wizard_view" model="ir.ui.view">
            <field name="name">exam.add.survey.wizard</field>
            <field name="model">exam.add.survey</field>
            <field name="arch" type="xml">
                <form string="Add questions">
                    <group>
                        <field name="question_level"/>
                        <field name="survey_id"/>
                        <field name="subject_id"/>
                        <field name="exam_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="add_question" type="object" string="Submit" class="btn-primary" data-hotkey="q"/>
                        <button class="btn-secondary" special="cancel" data-hotkey="z" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_exam_add_survey" model="ir.actions.act_window">
            <field name="name">Verify Documents</field>
            <field name="res_model">exam.add.survey</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="exam_add_survey_wizard_view"/>
        </record>
    </data>
</odoo>