                            <td>
                                <strong>Employee ID</strong>
                            </td>
                            <td>
                                <strong t-esc="o.employee_id.registration_number"/>
                            </td>
                            <td>
                                <strong>PAN NO</strong>
                            </td>
                            <td>
                                <strong t-esc="o.employee_id.pancard_no"/>
