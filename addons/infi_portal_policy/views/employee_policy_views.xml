<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_employee_policy" model="ir.actions.act_window">
            <field name="name">Employee Policies</field>
            <field name="res_model">employee.policy</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Employee Policy.
                </p>
            </field>
        </record>

        <menuitem id="menu_employee_policy" name="Employee Policy" parent="hr.menu_human_resources_configuration"
                  action="action_employee_policy" groups="hr.group_hr_manager"/>

        <record id="view_employee_policy_form" model="ir.ui.view">
            <field name="name">employee.policy.form</field>
            <field name="model">employee.policy</field>
            <field name="arch" type="xml">
                <form string="Employee Policy">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_employee_policy_tree" model="ir.ui.view">
            <field name="name">employee.policy.tree</field>
            <field name="model">employee.policy</field>
            <field name="arch" type="xml">
                <tree string="Employee Policy">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
