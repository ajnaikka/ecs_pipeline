        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[2]" position="inside">
                <group>
                    <group>
                           <button name="%(infi_attendance_request.action_employee_attendance_correction_wizard)d"
                        string="Attendance Correction Mail"
                        type="action"
                        icon="fa-check"
                        />
                    </group>



                </group>
            </xpath>
        </field>
    </record>
</odoo>
