<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_attendance_request_tree_view" model="ir.ui.view">
        <field name="name">Attendance Request</field>
        <field name="model">employee.attendance.request</field>
        <field name="arch" type="xml">
            <tree string="Attendance Request">
                <field name="send_to" />
                <field name="mail_to"/>
                <field name="mail_displayed"/>
                <field name="subject"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_employee_attendance_request" model="ir.ui.view">
        <field name="name">Attendance Request</field>
        <field name="model">employee.attendance.request</field>
        <field name="arch" type="xml">
            <form string="Request For Attendance">
                <group class="o_label_nowrap">
                    <field name="send_to"/>
                    <field name="mail_to" widget="radio" options="{'horizontal': True}"/>
                    <field name="mail_displayed" invisible="not mail_displayed" string=""/>
                </group>
                <group class="o_label_nowrap" string="Mail Options">
                    <field name="subject" placeholder="Signature Request"/>
                </group>
                <field name="message" placeholder="Optional Message..." widget="html"/>
                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
                <footer>
                    <button name="validate_attendance_request" string="Send" type="object" class="oe_highlight"
                            data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
		</field>
    </record>

    <record id="action_hr_employee_attendace_request" model="ir.actions.act_window">
        <field name="name">Attendace Request</field>
        <field name="res_model">employee.attendance.request</field>
        <field name="view_mode">form,tree</field>
        <field name="target">new</field>
    </record>
    <record id="action_hr_employee_attendace_request_view" model="ir.actions.act_window">
        <field name="name">Attendace Request</field>
        <field name="res_model">employee.attendance.request</field>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
    </record>
            <menuitem id="menu_attendance_request"
              name="Attendance Request"
              parent="hr_attendance.menu_hr_attendance_root"
              sequence="215"/>

            <menuitem id="menu_attendance_request_id"
              name="Attendance Request"
              parent="menu_attendance_request"
              action="action_hr_employee_attendace_request"
              sequence="1"/>

            <menuitem id="menu_attendance_request_view_id"
              name="Attendance Request View"
              parent="menu_attendance_request"
              action="action_hr_employee_attendace_request_view"
              sequence="2"/>


    
</odoo>