<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_attendance_correction_wizard_form" model="ir.ui.view">
        <field name="name">employee.attendance.correction.wizard.form</field>
        <field name="model">employee.attendance.correction.wizard</field>
        <field name="arch" type="xml">
            <form string="Employee Attendance Correction Wizard">
                <group>

                    <field name="send_to"/>
                    <field name="correction_reason" />
                    <field name="send_to_emp" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_send_mail" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="action_employee_attendance_correction_wizard" model="ir.actions.act_window">
        <field name="name">Employee Attendance Correction Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.attendance.correction.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_employee_attendance_correction_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>