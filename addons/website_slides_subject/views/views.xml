<odoo>
    <data>
        <record id="slide_channel_view_form" model="ir.ui.view">
            <field name="name">slide.channel.view.form.inherit.subject</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='enroll']" position="after">
                    <field name="nbr_subject" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='slide_category']" position="after">
                    <field name="subject_id"/>
                </xpath>
                <xpath expr="//create[@name='add_slide_section']" position="before">
                    <create name="add_slide_subject" string="Add Subject"
                            context="{'default_slide_category': 'subject', }"/>
                    <create name="add_slide_unit" string="Add Unit" context="{'default_is_category': True}"/>
                </xpath>
            </field>
        </record>

        <record id="slide_channel_view_kanban" model="ir.ui.view">
            <field name="name">slide.channel.view.kanban.inherit.subject</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.slide_channel_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website_published']" position="after">
                    <field name="nbr_subject"/>
                </xpath>
            </field>
        </record>

        <record id="slide_slide_view_form_subject" model="ir.ui.view">
            <field name="name">slide.slide.view.form.inherit.subject</field>
            <field name="model">slide.slide</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='slide_category']" position="after">
                    <field name="subject_id"
                           attrs="{'invisible': [('slide_category', '!=', 'subject')], 'required': [('slide_category', '=', 'subject')]}"/>
                    <field name="flip_book_id" attrs="{'invisible': [('slide_category', '!=', 'subject')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>