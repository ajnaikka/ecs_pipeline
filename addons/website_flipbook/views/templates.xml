<odoo>
    <data>
        <!-- Channels home template -->
        <template id='flipbook_home' name="Odoo Flipbook Homepage">
            <t t-set="body_classname" t-value="'o_wslides_body'"/>
            <t t-call="website.layout">
                <div id="wrap" class="wrap o_wslides_wrap">
                    <div class="oe_structure oe_empty">
                        <section class="s_banner overflow-hidden"
                                 style="background-color:(0, 0, 0, 0); background-image: url(&quot;/website_slides/static/src/img/banner_default.svg&quot;); background-size: cover; background-position: 55% 65%"
                                 data-snippet="s_banner">
                            <div class="container align-items-center d-flex mb-5 mt-lg-5 pt-lg-4 pb-lg-1">
                                <div class="text-white">
                                    <h1 class="display-3 mb-0">Reach new heights</h1>
                                    <h2 class="mb-4">Select a flipbook today!</h2>
                                    <div class="row mt-1 mb-3">
                                        <div class="col">
                                            <p>Skill up and have an impact! Your business career starts here.<br/>Time
                                                to read a flipbook.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="container mt16 o_wslides_home_nav position-relative">
                        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
                            <t t-call="website.website_search_box_input">
                                <t t-set="_form_classes" t-valuef="o_wslides_nav_navbar_right order-lg-3"/>
                                <t t-set="search_type" t-valuef="flipbook"/>
                                <t t-set="action" t-valuef="/flipbook/all"/>
                                <t t-set="display_description" t-valuef="true"/>
                                <t t-set="display_detail" t-valuef="false"/>
                                <t t-set="placeholder">Search Flipbook</t>
                            </t>
                            <button class="navbar-toggler px-2 order-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#navbarSlidesHomepage"
                                    aria-controls="navbarSlidesHomepage" aria-expanded="false"
                                    aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"/>
                            </button>
                            <div class="collapse navbar-collapse order-2" id="navbarSlidesHomepage">
                                <div class="navbar-nav pt-3 pt-lg-0">
                                    <a class="nav-link nav-link me-md-2 o_wslides_home_all_slides" href="/flipbook/all">
                                        <i class="fa fa-graduation-cap me-1"/>All flipbook
                                    </a>
                                </div>
                            </div>
                        </nav>

                    </div>

                    <div class="container o_wslides_home_main">
                        <div class="row">
                            <div class="col-lg pr-lg">
                                <div class="o_wslides_home_content_section mb-3"
                                     t-if="not flipbook_all">
                                    <p class="h2">No Flipbook added yet.</p>
                                </div>
                                <t t-if="flipbook_all">
                                    <div class="o_wslides_home_content_section mb-3">
                                        <div class="row o_wslides_home_content_section_title align-items-center">
                                            <div class="col">
                                                <h5 class="m-0">Flipbook</h5>
                                                <hr class="mt-2 mb-2"/>
                                            </div>
                                        </div>
                                        <div class="row mx-n2">
                                            <t t-foreach="flipbook_all" t-as="flipbook">
                                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 px-2 d-flex">
                                                    <t t-call="website_flipbook.flipbook_card"/>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                    <t t-call="website_flipbook.courses_footer"></t>
                </div>
            </t>
        </template>

        <template id='flipbook_card' name="Flipbook Card">
            <div class="card w-100 o_wslides_course_card mb-4 " t-cache="flipbook if is_public_user else None">
                <div t-if="flipbook.url" class="ratio ratio-4x3 embed-responsive-item mb8" style="height: 300px;">
                    <iframe t-att-src="flipbook.url" seamless="seamless" scrolling="no"
                            frameborder="0" allowfullscreen="true" width="100%" height="280"
                            class="o_wslides_iframe_viewer"></iframe>
                </div>
                <div class="card-body p-3">
                    <a class="card-title h5 mb-2 o_wslides_desc_truncate_2" t-attf-href="/flipbook/#{slug(flipbook)}"
                       t-esc="flipbook.name"/>
                    <span t-esc="flipbook.subject_id.name"/>

                </div>
                <!--                <div class="card-footer bg-white text-600 px-3">-->
                <!--                    <div class="d-flex justify-content-between align-items-center">-->
                <!--                        <small t-if="channel.total_time" class="fw-bold" t-esc="channel.total_time"-->
                <!--                               t-options="{'widget': 'duration', 'unit': 'hour', 'round': 'minute'}"/>-->
                <!--                        <div class="d-flex flex-grow-1 justify-content-end">-->
                <!--                            <t t-if="channel.is_member and channel.completed">-->
                <!--                                <span class="badge rounded-pill text-bg-success pull-right py-1 px-2">-->
                <!--                                    <i class="fa fa-check"/>-->
                <!--                                    Completed-->
                <!--                                </span>-->
                <!--                            </t>-->
                <!--                            <div t-elif="channel.is_member and channel.channel_type != 'documentation'"-->
                <!--                                 class="progress w-50" style="height: 6px">-->
                <!--                                <div class="progress-bar" role="progressbar" t-att-aria-valuenow="channel.completion"-->
                <!--                                     aria-valuemin="0" aria-valuemax="100"-->
                <!--                                     t-attf-style="width:#{channel.completion}%;"/>-->
                <!--                            </div>-->
                <!--                            <small t-else="">-->
                <!--                                <b t-esc="channel.total_slides"/>-->
                <!--                                steps-->
                <!--                            </small>-->
                <!--                        </div>-->
                <!--                    </div>-->
                <!--                </div>-->
            </div>
        </template>

        <template id='courses_footer'>
            <section class="s_banner">
                <div class="oe_structure oe_empty" id="oe_structure_website_flipbook_footer_1"/>
            </section>
        </template>

        <!-- Flipbook all/main template -->
        <template id='flipbook_all' name="Odoo All Flipbook">
            <t t-set="body_classname" t-value="'o_wslides_body'"/>
            <t t-call="website.layout">
                <div id="wrap" class="wrap o_wslides_wrap">
                    <!--                     Repeat structure for every section to allow customization through website editor. !-->
                    <div class="oe_structure oe_empty">
                        <section class="s_banner" data-snippet="s_banner"
                                 style="background-color:(0, 0, 0, 0); background-image: url(&quot;/website_slides/static/src/img/banner_default_all.svg&quot;); background-size: cover; background-position: 80% 20%">
                            <div class="container py-5">
                                <h1 class="display-3 mb-0 text-white">All Flipbook</h1>
                            </div>
                        </section>
                    </div>
                    <div class="container mt16 o_wslides_home_nav position-relative">
                        <!-- Navbar dynamically composed using displayed channel tag groups. -->
                        <nav class="navbar navbar-expand-md navbar-light shadow-sm ps-0">
                            <div class="navbar-nav border-end">
                                <a class="nav-link nav-item px-3" href="/flipbook">
                                    <i class="fa fa-chevron-left"/>
                                </a>
                            </div>

                            <t t-call="website.website_search_box_input">
                                <!-- Search box (mobile)-->
                                <t t-set="_form_classes" t-valuef="o_wslides_nav_navbar_right d-md-none"/>
                                <t t-set="search_type" t-valuef="flipbook"/>
                                <!-- No action: remain on same URL -->
                                <t t-set="display_description" t-valuef="true"/>
                                <t t-set="display_detail" t-valuef="false"/>
                                <t t-set="placeholder">Search flipbook</t>
                                <t t-set="search" t-value="original_search or search_term"/>
                            </t>
                            <button class="navbar-toggler px-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#navbarTagGroups"
                                    aria-controls="navbarTagGroups" aria-expanded="false"
                                    aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon small"/>
                            </button>
                        </nav>
                        <div class="o_wprofile_email_validation_container mb16 mt16">
                            <t t-call="website_profile.email_validation_banner">
                                <t t-set="redirect_url" t-value="'/flipbook'"/>
                                <t t-set="additional_validation_email_message">and join this Community</t>
                                <t t-set="additional_validated_email_message">You may now participate in our
                                    eLearning.
                                </t>
                            </t>
                        </div>

                    </div>
                    <div class="container o_wslides_home_main pb-5">
                        <div t-if="not flipbooks and not search_term">
                            <p class="h2">No Flipbook added yet.</p>
                        </div>
                        <div t-elif="search_term and not flipbooks" class="alert alert-info mb-5">
                            No flipbook was found matching your search
                            <code>
                                <t t-esc="search_term"/>
                            </code>
                            .
                        </div>
                        <div t-elif="not flipbooks" class="alert alert-info mb-5">
                            No flipbook was found matching your search.
                        </div>
                        <t t-else="">
                            <div t-if="original_search" class="alert alert-warning mb-5">
                                No results found for '<span t-esc="original_search"/>'. Showing results for '<span
                                    t-esc="search_term"/>'.
                            </div>
                            <div class="row mx-n2">
                                <t t-foreach="flipbooks" t-as="flipbook">
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 px-2 d-flex">
                                        <t t-call="website_flipbook.flipbook_card"/>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>

                    <t t-call="website_flipbook.courses_footer"></t>
                </div>
            </t>
        </template>

        <template id='flipbook_main' name="Flipbook Main">
            <t t-set="body_classname" t-value="'o_wslides_body'"/>
            <t t-call="website.layout">

                <div id="wrap" class="wrap o_wslides_wrap">
                    <!--                     Repeat structure for every section to allow customization through website editor. !-->
                    <div class="oe_structure oe_empty">
                        <section class="s_banner" data-snippet="s_banner"
                                 style="background-color:(0, 0, 0, 0); background-image: url(&quot;/website_slides/static/src/img/banner_default_all.svg&quot;); background-size: cover; background-position: 80% 20%">
                            <div class="container py-5">
                                <h1 class="display-3 mb-0 text-white">
                                    <span t-esc="flipbook.name"/>
                                </h1>
                            </div>
                        </section>
                    </div>
                    <div class="container mt16 o_wslides_home_nav position-relative">
                        <!-- Navbar dynamically composed using displayed channel tag groups. -->
                        <nav class="navbar navbar-expand-md navbar-light shadow-sm ps-0">
                            <div class="navbar-nav border-end">
                                <a class="nav-link nav-item px-3" href="/flipbook">
                                    <i class="fa fa-chevron-left"/>
                                </a>
                            </div>
                        </nav>
                    </div>
                    <div class="container o_wslides_home_main pb-5">
                        <div t-if="flipbook.url" class="ratio ratio-4x3 embed-responsive-item mb8">
                            <iframe t-att-src="flipbook.url" seamless="seamless" scrolling="no"
                                    frameborder="0" allowfullscreen="true" width="100%"
                                    class="o_wslides_iframe_viewer"
                            ></iframe>
                        </div>
                    </div>

                    <t t-call="website_flipbook.courses_footer"></t>
                </div>
            </t>
        </template>
    </data>
</odoo>