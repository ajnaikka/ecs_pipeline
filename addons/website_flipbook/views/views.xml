<odoo>
    <data>
        <record id="flip_book_view_visibility" model="ir.ui.view">
            <field name="name">flip.book.inherit.visibility</field>
            <field name="model">flip.book</field>
            <field name="inherit_id" ref="course_frame.view_flip_book_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='api_code']" position="after">
                    <field name="visibility" widget="radio" options="{'horizontal': true}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>