<odoo>
  <data>
<!--company config-->

          <record id="view_inherit_res_company_form" model="ir.ui.view">
            <field name="name">view.inherit.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="allow_attendance_correction" groups="infinous_user_groups.assigment_hr"/>
                </field>
            </field>
        </record>

<!--      cron job-->
 <record model="ir.cron" id="employee_attendance_reminder">
    <field name="name">Employee Attendance Correction Reminder</field>
    <field name="interval_number">1</field>
    <field name="interval_type">months</field>
    <field name="numbercall">-1</field>
    <field name="model_id" ref="hr.model_hr_employee"/>
    <field name="state">code</field>
    <field name="code">model.employee_attendance_reminder()</field>
</record>

<!--      Attendance correction req-->

        <record id="view_hr_employee_attendance_correction_request_inherit" model="ir.ui.view">
        <field name="name">hr.employee.attendance.correction.request.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

              <xpath expr="//button[@name='action_open_contract']" position="after">
                    <button name="smart_attendance_correction_request"
                        class="oe_stat_button"
                        icon="fa-bars"
                        type="object"
                        string="Attendance Correction Requests"/>

                  </xpath>
            <xpath expr="//header" position="inside">
                    <button string="Attendance Correction Request" class="oe_highlight" type="object" name="action_attendance_correction_request"/>
                  </xpath>
        </field>
   </record>
       <record id="attendance_correction_request_tree" model="ir.ui.view">
            <field name="name">attendance.correction.tree</field>
            <field name="model">attendance.correction</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="request_date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>

        </record>

        <record id="attendance_correction_request_form" model="ir.ui.view">
            <field name="name">attendance.correction.form</field>
            <field name="model">attendance.correction</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="attendance_correction_request_button" type="object" string="Attendance Correction Request" class="oe_highlight" invisible="state in ('raise_correction_req', 'issue_address','corrected','closed','cancel')"/>
                        <button name="action_attendance_issue_address" type="object" string="Issue Address" class="oe_highlight" invisible="state in ('draft', 'issue_address','corrected','closed','cancel')" groups="infinous_user_groups.reporting_manager"/>
                        <button name="action_attendance_accepted_corrected" type="object" string="Accept and Correct" class="oe_highlight" invisible="state in ('raise_correction_req', 'draft','cancel','closed','corrected')" groups="infinous_user_groups.reporting_manager"/>
                        <button name="action_attendance_cor_rejected" type="object" string="Reject" class="oe_highlight" invisible="state in ('raise_correction_req', 'draft','cancel','closed','corrected')"  groups="infinous_user_groups.reporting_manager"/>
                        <button name="close_att_button" type="object" string="Close" class="oe_highlight" invisible="state in ('draft','raise_correction_req','closed','issue_address')" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="request_date" readonly="1"/>
                                <field name="comment" string="Comment" invisible="1"/>
<!--                                <field name="email_to" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>-->
                            </group>
                        </group>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="attendance_correction_request_action" model="ir.actions.act_window">
            <field name="name">Attendance Correction Request</field>
            <field name="res_model">attendance.correction</field>
        </record>
        <menuitem
                id="attendance_correction_request_menu"
                parent="hr.menu_hr_employee_payroll"
                sequence="12"
                name="Attendance Correction Request"
                action="attendance_correction_request_action"
        />

  </data>
</odoo>
