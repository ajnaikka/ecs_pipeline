<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_recruitment_request" model="ir.ui.view">
        <field name="name">view.hr.employee.recruitment.request</field>
        <field name="model">employee.recruitment.wizard</field>
        <field name="arch" type="xml">
            <form string="Recruitment Request">

                <group class="o_label_nowrap">
                    <field name="send_to"/>
                    <field name="hr_managers" invisible="1"/>
                    <field name="mail_to" widget="radio" options="{'horizontal': True}"/>
                    <field name="mail_displayed" invisible="not mail_displayed" string=""/>
                </group>
                <group class="o_label_nowrap" string="Mail Options">
                    <field name="subject" placeholder="Signature Request"/>
                </group>
                <field name="message" placeholder="Optional Message..." widget="html"/>
                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
                <footer>
                    <button name="validate_recruitment_request" string="Send" type="object" class="oe_highlight"
                            data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_button_request_for_offer_letter" model="ir.actions.act_window">
        <field name="name">Employee Recruitment Request</field>
        <field name="res_model">employee.recruitment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>