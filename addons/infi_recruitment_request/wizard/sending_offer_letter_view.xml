<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_sending_offer_letter" model="ir.ui.view">
        <field name="name">view.hr.sending.offer.letter</field>
        <field name="model">sending.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Recruitment Request">

                <group class="o_label_nowrap">
                    <field name="email"/>
                    <field name="send_to" widget="many2many_tags"/>
                    <field name="hr_managers" invisible="1"/>
                    <field name="mail_to" widget="radio" options="{'horizontal': True}"/>
<!--                    <field name="mail_displayed" invisible="not mail_displayed" string=""/>-->
                </group>
                <group class="o_label_nowrap" string="Mail Options">
                    <field name="subject" placeholder="Signature Request"/>
                </group>
                <field name="message" placeholder="Optional Message..." widget="html"/>
                <field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
                <footer>
                    <button name="button_send_offer_letter" string="Send" type="object" class="oe_highlight"
                            data-hotkey="q"/>
                    <button name="to_cc" string="Send" type="object" class="oe_highlight"
                            data-hotkey="q" invisible="1"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_button_send_offer_letter" model="ir.actions.act_window">
        <field name="name">Sending Offer Letter</field>
        <field name="res_model">sending.approval.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>