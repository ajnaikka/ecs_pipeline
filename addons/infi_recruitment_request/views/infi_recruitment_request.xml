<odoo>
    <record id="view_employee_recruitment_form" model="ir.ui.view">
        <field name="name">view.employee.recruitment.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(infi_recruitment_request.action_button_request_for_offer_letter)d"
                        type="action"
                        class="oe_highlight" string="Request For Recruitment"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="%(infi_recruitment_request.action_button_send_offer_letter)d"
                        type="action"
                        class="oe_highlight" string="Sending Offer Letter" groups="infinous_user_groups.assigment_hr"/>
            </xpath>
        </field>
    </record>
</odoo>
