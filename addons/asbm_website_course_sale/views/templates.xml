<odoo>
    <data>
        <template id="course_buy_course_button_inherit" inherit_id="website_sale_slides.course_buy_course_button">
            <xpath expr="//form/a[@id='add_to_cart']" position="replace">
                <a id="add_to_cart" role="button" href="#"
                   class="btn btn-primary d-block js_check_product o_js_add_to_cart a-submit"
                   data-animation-selector=".o_wslides_course_pict">
                    <i class="fa fa-shopping-cart"></i>
                    Add to Course List
                </a>
            </xpath>
        </template>

        <template id="cart_popover_inherit" inherit_id="website_sale.cart_popover">
            <xpath expr="//div[@t-if='not website_sale_order or not website_sale_order.website_order_line']"
                   position="replace">
                <div t-if="not website_sale_order or not website_sale_order.website_order_line"
                     class="alert alert-info">
                    Your course list is empty!
                </div>
            </xpath>
            <xpath expr="//div/a[hasclass('btn-primary')]" position="replace">
                <a role="button" class="btn btn-primary" href="/shop/cart">
                    View Course (
                    <span class="o_wsale_cart_quantity" t-esc="website_sale_order.cart_quantity"/>
                    course(s))
                </a>
            </xpath>
        </template>

        <template id="address_inherit" inherit_id="website_sale.address">
            <xpath expr="//form/div/t[@t-if='website._display_partner_b2b_fields()']" position="replace">
                <div t-attf-class="mb-3 #{error.get('dob') and 'o_has_error' or ''} col-lg-6 div_dob">
                    <label class="col-form-label label-optional" for="dob">DOB</label>
                    <input type="date" name="dob" required="true"
                           class="form-control datetimepicker-input s_website_form_input"
                           t-att-value="'dob' in checkout and checkout['dob']"/>
                </div>
                <div t-attf-class="mb-3 #{error.get('gender') and 'o_has_error' or ''} col-lg-6" id="div_gender">
                    <label class="col-form-label label-optional" for="gender">Gender</label>
                    <div class="col-sm">
                        <label for="male">Male</label>
                        <input type="radio" style="width:12%;" name="gender" id="gender"
                               value="male"
                               t-att-checked="'checked' if 'gender' in checkout and checkout['gender'] == 'male' else None"/>
                        <label for="female">Female</label>
                        <input type="radio" style="width:10%;" name="gender" id="gender"
                               value="female"
                               t-att-checked="'checked' if 'gender' in checkout and checkout['gender'] == 'female' else None"/>

                    </div>
                </div>
                <div class="w-100"/>
                <div t-attf-class="mb-3 #{error.get('last_qualification') and 'o_has_error' or ''} col-lg-12"
                     id="div_last_qualification">
                    <label class="col-form-label label-optional" for="last_qualification">Last Qualification</label>
                    <input type="text" name="last_qualification"
                           t-attf-class="form-control #{error.get('last_qualification') and 'is-invalid' or ''}"
                           t-att-value="'last_qualification' in checkout and checkout['last_qualification']"/>
                </div>
            </xpath>
            <xpath expr="//form//input[@name='phone']" position="before">
                <br/>
            </xpath>
            <xpath expr="//form//input[@name='phone']" position="attributes">
                <attribute name="id">phone</attribute>
            </xpath>

            <xpath expr="//t[@t-call='website.layout']" position="before">
                <t t-set="head">

                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css"/>
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                </t>
            </xpath>
            <xpath expr="//form" position="inside">
                <style>

                    // extra styling for telephone formatting
                    .intl-tel-input .form-control {
                    padding-left: 47px !important;
                    }
                    .intl-tel-input .flag-dropdown .selected-flag {
                    padding: 11px 16px 11px 6px;
                    }
                    .intl-tel-input {
                    z-index: 99;
                    width: 100%;
                    }
                    .iti-flag {
                    box-shadow: none;
                    }
                    .intl-tel-input .selected-flag:focus {
                    outline: none;
                    }
                </style>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
                <script>
                    var input = document.querySelector("#phone");
                    window.intlTelInput(input,({
                    // options here
                    }));

                    $(document).ready(function() {
                    $('.iti__flag-container').click(function() {
                    var countryCode = $('.iti__selected-flag').attr('title');
                    var countryCode = countryCode.replace(/[^0-9]/g,'')
                    $('#phone').val("");
                    $('#phone').val("+"+countryCode+" "+ $('#phone').val());
                    });
                    });
                </script>
            </xpath>


        </template>
    </data>
</odoo>