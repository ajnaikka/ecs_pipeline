<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <function model="ir.model.fields" name="formbuilder_whitelist">
        <value>res.partner</value>
        <value eval="[
            'dob', 'gender', 'last_qualification',
        ]"/>
    </function>

    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_invoice_paid_account_manager" model="mail.template">
            <field name="name">Invoice has been Paid</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="subject">Invoice (Ref {{ object.name or 'n/a' }})</field>
            <field name="description">Sent to accounts manager with invoices in attachment</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi,
                        <br/>
                        <br/>
                        This is to inform you that new
                        <t t-if="object.name">
                            invoice
                            <span style="font-weight:bold;" t-out="object.name or ''"></span>
                        </t>
                        <t t-else="">
                            invoice
                        </t>
                        <t t-if="object.invoice_origin">
                            (with reference: <t t-out="object.invoice_origin or ''"></t>)
                        </t>
                        amounting in
                        <span style="font-weight:bold;"
                              t-out="format_amount(object.amount_total, object.currency_id) or ''">
                        </span>
                        has been created.
                        <t t-if="object.payment_state in ('paid', 'in_payment')">
                            This invoice is already paid.
                        </t>
                        <br/>
                        <br/>
                        <t t-if="not is_html_empty(object.invoice_user_id.signature)">
                            <br/>
                            <br/>
                            <t t-out="object.invoice_user_id.signature or ''">--<br/>Mitchell Admin
                            </t>
                        </t>
                    </p>
                </div>
            </field>
<!--            <field name="report_template" ref="account.account_invoices"/>-->
<!--            <field name="report_name">Invoice_{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and-->
<!--                '_draft' or '' }}-->
<!--            </field>-->
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>