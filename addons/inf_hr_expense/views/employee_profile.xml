<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_employee_profile" model="ir.actions.act_window">
            <field name="name">Employee Profiles</field>
            <field name="res_model">employee.profile</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Employee Profile.
                </p>
            </field>
        </record>

        <menuitem id="menu_employee_profile" name="Employee Profiles" parent="hr.menu_human_resources_configuration"
                  action="action_employee_profile" groups="hr.group_hr_manager"/>

        <record id="view_employee_profile_form" model="ir.ui.view">
            <field name="name">employee.profile.form</field>
            <field name="model">employee.profile</field>
            <field name="arch" type="xml">
                <form string="Employee Profile">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_employee_profile_tree" model="ir.ui.view">
            <field name="name">employee.profile.tree</field>
            <field name="model">employee.profile</field>
            <field name="arch" type="xml">
                <tree string="Employee Profiles">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
