<odoo>
    <data>
        <record model="ir.ui.view" id="custom_openeducat_crm_lead_form">
            <field name="name">student.document.crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="asbm_application_form_website.custom_openeducat_crm_lead_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(crm_document_bm_verification.action_crm_bm_document_verification)d"
                            string="BM Verification"
                            type="action" class="oe_highlight" data-hotkey="v"
                            attrs="{'invisible': ['|', ('bm_verified','=',True), ('type', '=', 'lead')]}"
                            groups="crm_document_bm_verification.group_data_verify_bm"/>
                </xpath>
                <xpath expr="//page/field[@name='attachments_details_line']" position="before">
                    <group>
                        <field name="bm_verified" invisible="1"/>
                        <field name="bm_verified_date" readonly="1" force_save="1"/>
                    </group>
                </xpath>
                <xpath expr="//page/field[@name='attachments_details_line']/tree/field[@name='lead_id']" position="after">
                    <field name="bm_verify" invisible="1"/>
                    <button string="BM" attrs="{'invisible':[('bm_verify','=',True)]}"
                            type="object" name="verify_document_by_bm"
                            groups="crm_document_bm_verification.group_data_verify_bm"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>