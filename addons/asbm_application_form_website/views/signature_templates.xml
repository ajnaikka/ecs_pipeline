            <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                <div class="container" style="max-width:100%;">
                    <br/>
                    <div role="dialog" class="modal fade" id="modalaccept">
                        <div class="modal-dialog">
                            <form id="accept" method="POST" t-att-data-order-id="lead_id.id"
                                  t-att-data-token="lead_id.access_token"
                                  class="js_accept_json modal-content js_website_submit_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Signature</h4>
                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">Ã—
                                    </button>
                                </header>
                                <main class="modal-body" id="sign-dialog">
                                    <p>
                                        <ul>
                                            <li>
                                                <span>Signed By:</span>
                                                <b t-field="lead_id.partner_id"/>
                                            </li>
                                        </ul>
                                    </p>
                                    <t t-call="portal.signature_form">lead_id.get_portal_url(suffix='/accept')
                                        <t t-set="call_url" t-value="lead_id.get_portal_url(suffix='/accept')"/>
                                        <t t-set="default_name" t-value="lead_id.partner_id.name"/>
                                    </t>
                                </main>
                            </form>
                        </div>
                    </div>
                    <form action="/submit_form/signature" class="s_website_form" method="POST"
                          style="height:100%;width:100%;" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mr-lg-auto">
                                <input type="hidden" name="lead_id" id="lead_id"
                                                       t-att-value="lead_id.id"/>
                            </div>
                            <div class="col-lg-12 col-xl-12 mr-lg-auto">
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group col-12 s_website_form_field s_website_form_custom s_website_form_required">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
