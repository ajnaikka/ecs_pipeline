<odoo>
    <data>
        <record id="view_corporate_user_tree" model="ir.ui.view">
            <field name="name">res.corporate.tree</field>
            <field name="model">res.corporate</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Corporate Users" sample="1" multi_edit="1">
                    <field name="name" string="Name"/>
                    <field name="phone" class="o_force_ltr" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="hide" readonly="1"/>
                    <field name="country_id" optional="show" readonly="1"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                </tree>
            </field>
        </record>


        <record id="view_corporate_form" model="ir.ui.view">
            <field name="name">res.corporate.form</field>
            <field name="model">res.corporate</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Corporates">
                    <header>
                        <button type="object" name="create_corporate_user" string="Create Corporate User"
                                class="oe_highlight" attrs="{'invisible': [('user_id', '!=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title mb24">
                            <label for="name" string="Name"/>
                            <h1>
                                <field name="name" requeired="1"/>

                            </h1>
                        </div>

                        <group>
                            <group>
                            <field name="is_franchise"/>
                            <field name="parent_id" attrs="{'invisible': [('is_franchise', '=', False)]}"/>/>
                            </group>
                            <group>

                            </group>
                            <group>

                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <div name="partner_address_country" class="d-flex justify-content-between">
                                        <field name="country_id" placeholder="Country" class="o_address_country"
                                               options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                </div>
                            </group>
                            <group>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"/>
                            </group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="res_corporate_kanban_view">
            <field name="name">res.corporate.kanban</field>
            <field name="model">res.corporate</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" sample="1">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                    <div>
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                        <ul>
                                            <li t-if="record.city.raw_value or record.country_id.raw_value">
                                                <t t-if="record.city.raw_value">
                                                    <field name="city"/>
                                                    <t t-if="record.country_id.raw_value">,</t>
                                                </t>
                                                <t t-if="record.country_id.raw_value">
                                                    <field name="country_id"/>
                                                </t>
                                            </li>
                                            <li t-if="record.email.raw_value" class="o_text_overflow">
                                                <field name="email"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left"/>
                                        <div class="oe_kanban_bottom_right"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_corporate_form" model="ir.actions.act_window">
            <field name="name">Corporates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.corporate</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_franchise','=',False)]</field>
            <field name="context">{'default_is_franchise': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Corporate in your address book
                </p>
                <p>
                    Odoo helps you track all activities related to your contacts.
                </p>
            </field>
        </record>

        <record id="action_franchise_form" model="ir.actions.act_window">
            <field name="name">Franchise</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.corporate</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_franchise','=',True)]</field>
            <field name="context">{'default_is_franchise': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Franchise in your address book
                </p>
                <p>
                    Odoo helps you track all activities related to your contacts.
                </p>
            </field>
        </record>


        <menuitem id="asbm_corporate_main_menu_root"
                  name="CC &amp; Franchise"
                  sequence="40"
                  groups="asbm_corporate.cc_portal_group"
                  web_icon="asbm_corporate,static/description/icon.png"/>


        <!-- menu categories -->
        <menuitem name="Sales" id="sales_crm_menu" parent="asbm_corporate_main_menu_root"
                  sequence="0"/>

        <menuitem name="Corporates" id="corporate_contact_main_menu" parent="asbm_corporate_main_menu_root"
                  sequence="10"
                  groups="asbm_corporate.cc_portal_group"
                  action="action_corporate_form"/>

        <!-- actions -->
        <menuitem name="My Pipeline" id="corporate_pipeline_menu" parent="sales_crm_menu"
                  sequence="0"
                  action="crm.action_your_pipeline"/>
        <menuitem name="Leads" id="corporate_leads_menu" parent="asbm_corporate_main_menu_root"
                  sequence="1"
                  action="crm.crm_lead_all_leads"/>

        <menuitem name="Corporates" id="corporate_contact_menu" parent="corporate_contact_main_menu"
                  sequence="0"
                  action="action_corporate_form"/>

        <menuitem name="Franchise" id="franchise_contact_menu" parent="corporate_contact_main_menu"
                  groups="asbm_corporate.cc_portal_group"
                  sequence="1"
                  action="action_franchise_form"/>

        <menuitem name="Courses" id="corporate_course_menu" parent="asbm_corporate_main_menu_root"
                  groups="asbm_corporate.cc_portal_group"
                  sequence="20"
                  action="openeducat_core.act_open_op_course_view"/>

        <menuitem name="Student" id="corporate_student_menu" parent="asbm_corporate_main_menu_root"
                  sequence="21"
                  action="openeducat_core.act_open_op_student_view_2"/>

    </data>
</odoo>