<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="cc_portal_group" model="res.groups">
            <field name="name">CC Portal User</field>
            <field name="comment">CC Portal Permission Group.</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="openeducat_core.module_category_openeducat_others"/>
        </record>

        <record id="corporate_user_franchise_rule" model="ir.rule">
            <field name="name">Own Franchise</field>
            <field name="model_id" ref="asbm_corporate.model_res_corporate"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('asbm_corporate.cc_portal_group'))]"/>
        </record>

        <record id="corporate_admin_franchise_rule" model="ir.rule">
            <field name="name">All Franchise</field>
            <field name="model_id" ref="asbm_corporate.model_res_corporate"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('asbm_corporate.cc_portal_group'))]"/>
        </record>

        <record id="corporate_user_subject_rule" model="ir.rule">
            <field name="name">Own Subjects</field>
            <field name="model_id" ref="openeducat_core.model_op_student"/>
            <field name="domain_force">[('corporate_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('asbm_corporate.cc_portal_group'))]"/>
        </record>

        <record id="corporate_admin_subject_rule" model="ir.rule">
            <field name="name">Admin Subjects</field>
            <field name="model_id" ref="openeducat_core.model_op_student"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="corporate_user_course_rule" model="ir.rule">
            <field name="name">Own Courses</field>
            <field name="model_id" ref="openeducat_core.model_op_course"/>
            <field name="domain_force">[('corporate_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('asbm_corporate.cc_portal_group'))]"/>
        </record>

        <record id="corporate_admin_course_rule" model="ir.rule">
            <field name="name">Admin Courses</field>
            <field name="model_id" ref="openeducat_core.model_op_course"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

    </data>
</odoo>