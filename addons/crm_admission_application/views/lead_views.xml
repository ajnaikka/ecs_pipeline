<odoo>
    <data>
        <record id="application_crm_lead_form_view" model="ir.ui.view">
            <field name="name">crm.lead.application</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(crm_admission_application.action_crm_generate_application)d"
                            string="Generate Application"
                            type="action" class="oe_highlight" data-hotkey="v"
                            attrs="{'invisible': ['|','|', '|', ('op_admission_id','!=',False), ('student_id', '=', False), ('type', '=', 'lead'), ('bm_verified', '=', False)]}"/>
                </xpath>
                <xpath expr="//page[@name='application_details']/group/group/field[@name='admission_register']"
                       position="after">
                    <field name="op_admission_id" readonly="1" force_save="1"
                           attrs="{'invisible':[('student_id', '=', False)]}"/>
                    <field name="op_admission_status" readonly="1" force_save="1"
                           attrs="{'invisible':[('op_admission_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                            type="object"
                            name="view_student_fees_details"
                            style="border-right: 1px solid;border-bottom: 1px solid;white-space: inherit;display: inline-flex;"
                            attrs="{'invisible': [('fees_details_count', '&lt;', 1)]}"
                            icon="fa-file">
                        <field string="Fees Details" name="fees_details_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="batch_id" context="{'course_id': application_for_admission, 'get_parent_batch':1, 'default_course_id': application_for_admission}"
                    attrs="{'required':[('application_for_admission', '!=', False)]}"/>
                    <field name="batch_type" attrs="{'required':[('application_for_admission', '!=', False)]}"/>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="course_extra_fees" string="Course Extra Fees">
                        <field name="course_extra_fees_line">
                            <tree string="Course Extra Fees" editable="bottom">
                                <field name="product_id" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="course_total_fee_crm_lead_form">
            <field name="name">course.total.fee.crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="openeducat_custom.core_openeducat_crm_lead_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='application_details']/field[@name='course_fees']" position="after">
                    <field name="extra_fees"/>
                    <field name="total_course_fee"/>
                </xpath>
            </field>
        </record>

        <record id="application_crm_lead_oppo_tree_view" model="ir.ui.view">
            <field name="name">crm.lead.opportunity.application</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='user_id']" position="after">
                    <field name="op_admission_id"/>
                    <field name="op_admission_status"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>