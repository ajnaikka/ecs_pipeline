<odoo>
    <data>
        <record id="crm_lead_admission_application_wizard_view" model="ir.ui.view">
            <field name="name">crm.lead.admission.application.wizard</field>
            <field name="model">crm.lead.admission.application</field>
            <field name="arch" type="xml">
                <form string="Generate Application">
                    <group>
                        <group>
                            <field name="batch_id" context="{'course_id': course_id, 'get_parent_batch':1, 'default_course_id': course_id}"/>
                            <field name="application_date"/>
                            <field name="fees_term_id"/>
                            <field name="fees_start_date"/>
                            <field name="course_type"/>
                        </group>
                        <group>
                            <field name="student_id" readonly="1"/>
                            <field name="birth_date" options="{'datepicker':{'warn_future': true}}"/>
                            <field name="fees"/>
                            <field name="discount"/>
                            <field name="lead_id" invisible="1"/>
                            <field name="register_id" invisible="1"/>
                            <field name="course_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_generate_application" type="object" string="Generate Application" class="btn-primary" data-hotkey="q"/>
                        <button class="btn-secondary" special="cancel" data-hotkey="z" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_crm_generate_application" model="ir.actions.act_window">
            <field name="name">Generate Admission Application</field>
            <field name="res_model">crm.lead.admission.application</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="crm_lead_admission_application_wizard_view"/>
        </record>
    </data>
</odoo>