<odoo>
    <data>
        <record id="view_exam_register_tree" model="ir.ui.view">
            <field name="name">exam.register.tree</field>
            <field name="model">exam.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Exam Register">
                    <field name="session_id"/>
                    <field name="name"/>
                    <field name="exam_date"/>
                    <field name="course_id"/>
                    <field name="admission_id"/>
                    <field name="student_id"/>
                    <field name="exam_status"/>
                </tree>
            </field>
        </record>

        <record id="view_exam_register_form" model="ir.ui.view">
            <field name="name">exam.register.form</field>
            <field name="model">exam.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Exam Register">
                    <header>
                        <button name="action_schedule_exam" states="draft" type="object"
                            string="Schedule Exam" class="oe_highlight"/>
                        <button name="action_exam_add_survey" type="object" states="schedule"
                            string="Add Question" class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,schedule,question_added"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field class="text-break" name="name" readonly="1" force_save="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="session_id" required="1" readonly="1" force_save="1"/>
                                <field name="course_id" readonly="1" force_save="1"/>
                                <field name="exam_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="admission_id" readonly="1" force_save="1"/>
                                <field name="student_id" readonly="1" force_save="1"/>
                                <field name="exam_status" readonly="1"/>
                            </group>
                        </group>
                        <group string="Exams">
                            <field name="exam_ids" colspan="2" nolabel="1" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="subject_id"/>
                                    <field name="exam_code"/>
                                    <field name="exam_date"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="state"/>
                                    <field name="survey_id" invisible="1"/>
                                    <field name="survey_id_shared" invisible="1"/>
                                    <button name="action_share_first_survey_id" help="Share Exam Link" type="object" class="fa fa-fw fa-paper-plane o_button_icon"
                            attrs="{'invisible': ['|', '|', ('state', '!=', 'schedule'), ('survey_id', '=', False), ('survey_id_shared', '=', True)]}" title="Share"/>

                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_exam_register_search" model="ir.ui.view">
            <field name="name">exam.register.search</field>
            <field name="model">exam.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Exam Register">
                    <field name="session_id"/>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="admission_id"/>
                    <field name="student_id"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Exam Session" name="group_by_exam_session_id"
                                domain="[]" context="{'group_by':'session_id'}"/>
                        <filter string="Course" name="group_by_exam_course"
                                domain="[]" context="{'group_by':'course_id'}"/>
                        <filter string="Student" name="group_by_student"
                                domain="[]" context="{'group_by':'student_id'}"/>
                        <filter string="Admission" name="group_by_admission"
                                domain="[]" context="{'group_by':'admission_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_exam_register_view">
            <field name="name">Exam Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.register</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_exam_register_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_exam_register_view_form">
            <field name="act_window_id" ref="act_open_exam_register_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_exam_register_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_exam_register_view_tree">
            <field name="act_window_id" ref="act_open_exam_register_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_exam_register_tree"/>
        </record>

        <menuitem id="menu_exam_register_main"
                  name="Exam Register"
                  parent="openeducat_exam.menu_op_school_exam_result"
                  sequence="19"
                  action="act_open_exam_register_view"
                  groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin,openeducat_core.group_op_faculty"/>

        <record id="exam_status_form_view" model="ir.ui.view">
            <field name="name">exam.status.form.view</field>
            <field name="model">op.exam</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_form"/>
            <field name="arch" type="xml">
                <field name="min_marks" position="after">
                    <field name="exam_status" readonly="1" force_save="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>