<odoo>
    <data>
        <record id="view_hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bank_account_id']" position="after">
                    <field name="pancard_no"/>
                </xpath>
                <xpath expr="//field[@name='ssnid']" position="replace">
                    <field name="ssnid" string="ESO NO"/>
                </xpath>
                <xpath expr="//field[@name='identification_id']" position="replace">
                    <field name="identification_id" string="UAN NO"/>
                </xpath>
                <xpath expr="//field[@name='identification_id']" position="after">
                    <field name="insurance_number"/>
                </xpath>
                <xpath expr="//field[@name='identification_id']" position="after">
                    <field name="pf_number"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>