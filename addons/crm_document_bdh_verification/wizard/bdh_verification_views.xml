<odoo>
    <data>
        <record id="crm_document_bdh_verification_wizard_view" model="ir.ui.view">
            <field name="name">crm.bdh.document.verification.wizard</field>
            <field name="model">crm.bdh.document.verification</field>
            <field name="arch" type="xml">
                <form string="Verify Documents">
                    <group>
                        <field name="status"/>
                        <field name="message" attrs="{'invisible':[('status', '=', 'verified')], 'required':[('status', '!=', 'verified')]}"/>
                        <field name="delete_declined" attrs="{'invisible':[('status', '!=', 'verified')]}"/>
                        <field name="payment_type"/>
                        <field name="verified_date" invisible="1"/>
                        <field name="lead_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_verify_documents" type="object" string="Submit" class="btn-primary" data-hotkey="q"/>
                        <button class="btn-secondary" special="cancel" data-hotkey="z" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_crm_bdh_document_verification" model="ir.actions.act_window">
            <field name="name">Verify Documents</field>
            <field name="res_model">crm.bdh.document.verification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="crm_document_bdh_verification_wizard_view"/>
        </record>
    </data>
</odoo>