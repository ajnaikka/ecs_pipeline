<odoo>
    <data>
        <record id="missing_documents_bdh_email_template" model="mail.template">
            <field name="name">Lead: BDH Verification Missing Documents</field>
            <field name="model_id" ref="crm_document_bdh_verification.model_crm_bdh_document_verification"/>
            <field name="email_from">{{ (object.lead_id.user_id.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.lead_id.partner_id.id }}</field>
            <field name="subject">{{ object.lead_id.name}} - Missing Documents</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <t t-out="object.lead_id.partner_id.name"/>
                        <br/>
                        <br/>
                        <div name="open_link">
                            Here is your website address with reference
                            <t t-out="object.lead_id.name"/>.
                            <br/>
                            Please attach all missing documents/ declined documents listed below.
                            <br/>
                            <t t-out="object.message"/>
                        </div>
                        <table border="0" cellpadding="0" cellspacing="0" width="590"
                               style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                            <tr>
                                <td valign="top" style="padding: 0px 10px;">
                                    <div style="margin: 16px 8px 16px 8px;">
                                        <div style="margin: 16px 8px 16px 8px; text-align: center;">
                                            <a t-att-href="object.lead_id.mail_website_val"
                                               style="background-color: #875a7b; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                                                Application Form
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        Do not hesitate to contact us if you have any queries.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>