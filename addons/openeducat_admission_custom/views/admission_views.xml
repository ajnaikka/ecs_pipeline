<odoo>
    <data>
        <record id="application_payment_type_form_view" model="ir.ui.view">
            <field name="name">op.admission.payment.type</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='admission_detail']//field[@name='fees_term_id']" position="after">
                    <field name="payment_type" attrs="{'required': [('state','not in', ['draft', 'submit'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>