<odoo>
    <data>
        <record id="view_course_category_tree" model="ir.ui.view">
            <field name="name">course.category.tree</field>
            <field name="model">course.category</field>
            <field name="arch" type="xml">
                <tree string="Course Categories">
                    <field name="name" string="Name"/>
                    <field name="course_ids" widget="many2many_tags"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_course_category_form" model="ir.ui.view">
            <field name="name">course.category.form</field>
            <field name="model">course.category</field>
            <field name="arch" type="xml">
                <form string="Course Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title mb24">
                            <label for="name" string="Name"/>
                            <h1>
                                <field name="name"/>

                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="parent_id"/>
                                <field name="course_ids" widget="many2many_tags" domain="[('course_category_id', '=', id)]"/>
                            </group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>

            </field>
        </record>

        <record id="action_course_categories_master" model="ir.actions.act_window">
            <field name="name">Course Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">course.category</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Course Category
                </p>
                <p>
                    Odoo helps you track all activities related to your course categories.
                </p>
            </field>
        </record>

        <menuitem id="menu_course_category"
                  name="Course Categories"
                  parent="openeducat_core.menu_op_school_config_course"
                  action="action_course_categories_master" sequence="17"/>

        <menuitem name="Course Categories" id="batch_calendar_course_categories_menu" parent="asbm_batch_calendar.menu_batch_calendar_config"
                  action="action_course_categories_master"
                  sequence="20"/>
    </data>
</odoo>