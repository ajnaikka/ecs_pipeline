<odoo>
    <data>
        <record id="op_exam_session_form_month_inherit" model="ir.ui.view">
            <field name="name">op.exam.session.form.inherit.month</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='venue']" position="attributes">
                    <attribute name="required">False</attribute>
                </xpath>
                <field name="batch_id" position="after">
                    <field name="course_type" widget="selection"/>
                </field>
            </field>
        </record>

        <record id="op_exam_session_search_inherit" model="ir.ui.view">
            <field name="name">op.exam.session.search.inherit</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter name="filter_exam_contains" string="Exam is Set" domain="[('exam_ids', '!=', False)]"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="openeducat_exam.act_open_op_exam_session_view">
            <field name="context">{'search_default_filter_exam_contains': 1}</field>
        </record>
    </data>
</odoo>