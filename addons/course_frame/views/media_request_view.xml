<odoo>
    <data>
        <record model="ir.ui.view" id="view_media_request_list">
            <field name="name">media.request.list</field>
            <field name="model">media.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="expected_date"/>
                    <field name="dead_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_media_request_form">
            <field name="name">media.request.form</field>
            <field name="model">media.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_assigned" type="object" class="btn-primary" string="Assign To DH"
                                 attrs="{'invisible':['|',('state', 'not in', ('draft')),('is_team_lead', '=', False)]}"/>
                          <button name="action_assign_to_emp" type="object" class="btn-primary" string="Assign To EMP"
                                 attrs="{'invisible':['|',('state', 'not in', ('assigned')),('is_dep_head', '=', False)]}"/>
                        <button name="action_submitted_to_department_head" type="object" class="btn-primary" string="Submit"
                                attrs="{'invisible': ['|',('state', 'not in', ('assigned_emp','tl_reject')), ('is_assigned_emp', '=', False)]}"/>
                        <button name="action_department_head_approve" type="object" class="btn-primary" string="Approve"
                                attrs="{'invisible':['|',('state', 'not in', ('submitted')),('is_dep_head', '=', False)]}"/>
                        <button name="action_department_head_reject" type="object" class="btn-primary" string="Reject"
                                attrs="{'invisible':['|',('state', 'not in', ('submitted')),('is_dep_head', '=', False)]}"/>
                        <button name="action_reject_to_back_submitted" type="object" class="btn-primary" string="Reject to Back"
                                attrs="{'invisible':['|',('state', 'not in', ('approved')),('is_dep_head', '=', False)]}" groups="course_frame.group_academy_director"/>

                        <field name="state" widget="statusbar" force_save="1"
                               statusbar_visible="draft,assigned,assigned_emp,submitted,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title mb24">
                            <label for="name" string="Name"/>
                            <h1>
                                <field name="name"
                                       attrs="{'readonly':[('state', 'not in', ['draft'])]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="request_type_id"/>
                                <field name="department_head_id"/>
                                <field name="employee_id" domain="[('department_id','=',department_id)]" attrs="{'invisible':[('state', 'in', ('draft'))]}" />
                                <field name="is_assigned_emp" invisible="1"/>
                                <field name="is_dep_head" invisible="1"/>
                                <field name="is_content_writer" invisible="1"/>
                                <field name="is_team_lead" invisible="1"/>
                                <field name="is_academic_head" invisible="1"/>
                                <field name="is_ass_dean" invisible="1"/>
                                <field name="is_managing_dir" invisible="1"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="expected_date"/>
                                <field name="dead_date"/>
                                <field name="attachment_id" widget="binary"
                                                       attrs="{'readonly': [('state', 'not in', ['assigned_emp'])]}"/>
                            </group>
                            <group>
                                <field name="remark"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="media_request_action_window">
            <field name="name">Media Request</field>
            <field name="res_model">media.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_media_request"
                  name="Media Requests"
                  parent="menu_op_course_main"
                  action="media_request_action_window" sequence="2"/>
    </data>
</odoo>