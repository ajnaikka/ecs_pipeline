<odoo>
    <data>
        <record id="mark_op_subject_form_inherits" model="ir.ui.view">
            <field name="name">op.subject.form.inherit.mark</field>
            <field name="model">op.subject</field>
            <field name="inherit_id" ref="openeducat_core.view_op_subject_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='grade_weightage']" position="after">
                    <field name="total_marks"/>
                    <field name="passing_marks"/>
                    <field name="showing_as_id"/>
                </xpath>
            </field>
        </record>

        <record id="mark_op_subject_tree_inherits" model="ir.ui.view">
            <field name="name">op.subject.tree.inherit.mark</field>
            <field name="model">op.subject</field>
            <field name="inherit_id" ref="openeducat_core.view_op_subject_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='grade_weightage']" position="after">
                    <field name="total_marks"/>
                    <field name="passing_marks"/>
                    <field name="showing_as_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>