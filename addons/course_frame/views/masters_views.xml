            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="subject_id" attrs="{'invisible': [('type', '!=', 'subject')]}"/>
                    <field name="specialisation_id" attrs="{'invisible': [('type', '!=', 'specialisation')]}"/>
                </tree>
