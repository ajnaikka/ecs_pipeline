<odoo>
  <data>
   <record id="view_hr_employee_generate_it_request_inherit" model="ir.ui.view">
        <field name="name">hr.employee.generate.it.request.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

              <xpath expr="//button[@name='action_open_contract']" position="after">
                    <button name="smart_generate_it_request"
                        class="oe_stat_button"
                        icon="fa-bars"
                        type="object"
                        string="Generate IT Requests"/>

                  </xpath>
            <xpath expr="//header" position="inside">
                    <button string="Generate IT Request" class="oe_highlight" type="object" name="action_generate_it_request" groups="infinous_user_groups.assigment_hr"/>
                  </xpath>
        </field>
   </record>
       <record id="generate_it_request_tree" model="ir.ui.view">
            <field name="name">request.it.tree</field>
            <field name="model">request.it</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="request_date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="generate_it_request_form" model="ir.ui.view">
            <field name="name">request.it.form</field>
            <field name="model">request.it</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="generate_it_request_button" type="object" string="Generate IT Request" class="oe_highlight" invisible="state in ('gen_req', 'issue_address_to_it')" groups="infinous_user_groups.assigment_hr"/>
                        <button name="action_issue_address_by_it" type="object" string="Issue Address" class="oe_highlight" invisible="state in ('draft', 'issue_address_to_it','to_reporting_manager')" groups="infinous_user_groups.it_department"/>
<!--                        <button name="action_assign_reporting_manager" type="object" string="Assign To Reporting Manager" class="oe_highlight" invisible="state in ('draft', 'raise_req','to_reporting_manager','corrected','cancel','closed')" groups="infinous_user_groups.assigment_hr"/>-->
<!--                        <button name="action_accepted_corrected" type="object" string="Accept and Correct" class="oe_highlight" invisible="state in ('raise_req', 'draft','cancel','issue_address','closed','corrected')" groups="infinous_user_groups.reporting_manager"/>-->
<!--                        <button name="action_rejected" type="object" string="Reject" class="oe_highlight" invisible="state in ('raise_req', 'draft','cancel','issue_address','closed','corrected')"  groups="infinous_user_groups.reporting_manager"/>-->
<!--                        <button name="close_button" type="object" string="Close" class="oe_highlight" invisible="state in ('draft','raise_req','cancel','closed','to_reporting_manager')" groups="infinous_user_groups.assigment_hr"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="job_id"/>
                                <field name="work_email"/>
                                <field name="request_date" readonly="1"/>
                                <field name="comment" string="Comment" invisible="1"/>
<!--                                <field name="email_to" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>-->
                            </group>
                        </group>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="generate_it_request_action" model="ir.actions.act_window">
            <field name="name">Request IT</field>
            <field name="res_model">request.it</field>
        </record>
        <menuitem
                id="generate_it_request_menu"
                parent="hr.menu_hr_employee_payroll"
                sequence="11"
                name="Generate IT Requests"
                action="generate_it_request_action"
        />

  </data>
</odoo>
