<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_mail_compose_resi_form_inherit" model="ir.ui.view">
            <field name="name">mail.compose.message.resi.form.inherit</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subject']" position="before">
                </xpath>
            </field>
        </record>

        <!-- Corrected and improved templates -->
        <record id="leave_request_email" model="mail.template">
            <field name="name">Leave Request Template</field>
            <field name="model_id" ref="infi_compensatory_request.model_compensatory_request"/>
            <field name="subject">Compensatory Request from {{object.employee_id.name}}</field>
            <field name="email_from">{{user.partner_id.email}}</field>
            <field name="email_to">{{object.employee_id.parent_id.user_id.partner_id.email}}</field>
            <field name="body_html">
                <![CDATA[
            <p>
                <b>Comp off request against: </b><strong><t t-out="object.attendance_id.check_in.date() or ''"></t></strong><br/>
                <b>Comp off request for: </b><strong><t t-out="object.date_to or ''"></t></strong><br/>
            </p>
        ]]>
            </field>
        </record>
    </data>
</odoo>