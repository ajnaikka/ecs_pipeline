<odoo>
    <data>

        <record id="shift_request_employee_wizard_form" model="ir.ui.view">
            <field name="name">Shift Request Employee Wizard</field>
            <field name="model">shift.request.employee.wizard</field>
            <field name="arch" type="xml">
                <form string="Shift Request">
                    <group>
                        <group>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="shift_id"/>
                        </group>
                        <group>
                            <field name="shift_day_start"/>
                            <field name="shift_day_end"/>
                        </group>

                    </group>
                    <footer>
                        <button
                                name="confirm"
                                string="Confirm"
                                type="object"
                                class="oe_highlight"
                        />
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="shift_request_employee_wizard_action" model="ir.actions.act_window">
            <field name="name">Shift Request</field>
            <field name="res_model">shift.request.employee.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem
                id="bluk_shift_request_menu"
                parent="hr.menu_hr_employee_payroll"
                sequence="25"
                name="Bulk Shift Request"
                action="shift_request_employee_wizard_action"/>

    </data>
</odoo>