<odoo>
    <data>
        <record id="slide_channel_view_form_publish" model="ir.ui.view">
            <field name="name">slide.channel.view.form.inherit.publish</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_publish_or_unpublish" string="Publish" type="object" class="oe_highlight" attrs="{'invisible':[('is_published','=',True)]}"/>
                    <button name="action_publish_or_unpublish" string="Unpublish" type="object" class="oe_highlight" attrs="{'invisible':[('is_published','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>