<odoo>
    <data>

        <template id="sp_invoice_print_template_document">
            <t t-call="asbm_invoice_print.asbm_invoice_print_external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <style type="text/css">
                        .Row {
                        display: table;
                        width: 100%; /*Optional*/
                        }

                        @font-face {
                        font-family: 'Arial';
                        src: local('Arial'), local('Arial'),
                        url(/bindousr_invoice_print/static/src/fonts/arial.ttf') format('truetype');
                        }


                        @font-face {
                        font-family: 'Verdana';
                        src: local('Verdana'), local('Verdana'),
                        url(/bindousr_invoice_print/static/src/fonts/verdana.ttf') format('ttf');
                        }

                        .arabic-font {
                        font-family: arial;
                        }

                        .en-font {
                        font-family:arial;
                        }

                        th, td {
                        padding: 3px;
                        }
                        tr{
                        page-break-inside: avoid;
                        }
                        tr:nth-child(even){
                        background-color: #F0F0F0;
                        }
                    </style>
                    <div class="oe_structure"/>

                    <div>
                        <table style="table-layout:fixed;font-size: 12px;width:100%;">
                            <tr>
                                <td class="en-font" width="45%" style="border:1px solid black;">
                                    <i>From:</i>
                                    <br/>
                                    <span style="font-weight:bold;" t-field="o.company_id.name"/>
                                    <address t-field="o.company_id.partner_id"
                                             t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                    <div t-if="o.company_id.partner_id.vat" class="mt16">
                                        GSTIN:
                                        <span t-field="o.company_id.partner_id.vat"/>
                                    </div>

                                </td>
                                <td class="en-font" width="10%"></td>
                                <td class="en-font" width="45%" style="border:1px solid black;">
                                    <i>To:</i>
                                    <br/>
                                    <span style="font-weight:bold;" t-field="o.partner_id.name"/>
                                    <address t-field="o.partner_id"
                                             t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                    <div t-if="o.partner_id.vat" class="mt16">
                                        GSTIN:
                                        <span t-field="o.partner_id.vat"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        <table class="table table-sm" style="table-layout:fixed;font-size: 12px;" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="6%"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center;">

                                        <span class="en-font">Sl</span>
                                    </th>
                                    <th width="30%" class="en-font"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center;vertical-align:middle;">

                                        <span class="en-font">Course Name</span>
                                    </th>
                                    <th width="7%" class="en-font"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center;vertical-align:middle;">

                                        <span class="en-font">SP Code</span>
                                    </th>
                                    <th width="6%" class="en-font"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center;vertical-align:middle;">

                                        <span class="en-font">Lot</span>
                                    </th>
                                    <th width="5%" class="en-font"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center;vertical-align:middle;">

                                        <span class="en-font">Qty</span>
                                    </th>
                                    <th width="10%"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center">

                                        <span class="en-font">Fees</span>
                                    </th>
                                    <th width="8%"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center">

                                        <span class="en-font">Tax</span>
                                    </th>
                                    <th width="12%"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center">

                                        <span class="en-font">Tax Amount</span>
                                    </th>

                                    <th width="14%"
                                        style="text-weight:bold;background-color:#FF7518 !important;border: 1px !important; border-style: solid !important; border-color: #fff !important;color:#fff !important;text-align:center">

                                        <span class="en-font">Total</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td style="text-align:center;" class="en-font">
                                        <t t-esc="l_index+1"/>
                                    </td>
                                    <td style="line-height: 1;">
                                        <div class="en-font" style="text-align:left;">
                                            <t t-esc="l.name"/>
                                        </div>
                                    </td>
                                    <td class="text-center en-font">
<!--                                        <t t-esc="l.product_id.barcode"/>-->
                                    </td>
                                    <td class="text-center en-font">
<!--                                        <t t-esc="l.price_unit"/>-->
                                    </td>
                                    <td class="text-center en-font">
                                        <t t-esc="'{:,.2f}'.format(l.quantity)"/>
                                    </td>
                                    <td class="text-right en-font">
                                        <t t-esc="'{:,.2f}'.format(l.price_unit)"/>
                                    </td>
                                    <td class="text-center en-font">

                                        <t t-if="l.tax_ids">
                                            <t t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))"/>
                                        </t>

                                    </td>
                                    <td class="text-right en-font">
                                        <t t-esc="'{:,.2f}'.format(l.price_total - l.price_subtotal)"/>
                                    </td>

                                    <td class="text-right en-font">
                                        <t t-esc="'{:,.2f}'.format(l.price_total)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <br/>
                        <br/>
                        <br/>

                        <div class="row">
                            <div class="col-12">
                                <table width="100%" style="table-layout:fixed;font-size: 12px;border:1px solid black;">
                                    <tr style="border:1px solid black;">
                                        <td width="86%" style="font-weight:bold;">
                                            <strong>
                                                <span class="en-font"
                                                      style="Text-align:left; font-weight:bold;">
                                                    Total
                                                </span>
                                            </strong>
                                        </td>
                                        <td width="14%" style="font-weight:bold;"
                                            class="text-right en-font">
                                            <t t-esc="'{0:,.2f}'.format(float(o.amount_total))"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row" style="page-break-inside:avoid;">
                        <div class="col-12">
                            <span style="margin-left:70px;">Make all payments to our bank account</span>
                        </div>
                    </div>

                    <br/>
                    <br/>

                    <div class="row">
                        <div class="col-12">
                            <div t-if="o._get_Bank()" class="en-font"
                                 style="text-align:center;font-size:12px;text-weight:bold;">
                                <t t-esc="o._get_Bank().acc_holder_name"/>
                                <br/>
                                A/c No:
                                <t t-esc="o._get_Bank().acc_number"/>
                                <br/>
                                <t t-esc="o._get_Bank().bank_id.name"/>
                                <br/>
                                IFSC:
                                <t t-esc="o._get_Bank().bank_id.bank_ifsc"/>
                                <br/>
                                Swift Code:
                                <t t-esc="o._get_Bank().bank_id.bic"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="sp_invoice_print_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="asbm_invoice_print.sp_invoice_print_template_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>