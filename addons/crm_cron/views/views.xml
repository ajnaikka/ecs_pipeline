<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--   Inherit CRM Confiuration form-->
    <record model="ir.ui.view" id="crm_stage_configuration_form">
      <field name="name">crm.stage.form</field>
      <field name="model">crm.stage</field>
      <field name="inherit_id" ref="crm.crm_stage_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='is_won']" position="after">
            <field name="check_duplicate" />
            <field name="fresh_lead" confirm="are you confirm?"/>
        </xpath>
      </field>
    </record>

<!--     Inherit CRM Configuration tree view-->
    <record model="ir.ui.view" id="crm_stage_configuration_view">
      <field name="name">crm.stage.form</field>
      <field name="model">crm.stage</field>
      <field name="inherit_id" ref="crm.crm_stage_tree" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='is_won']" position="after">
            <field name="fresh_lead"/>
          <field name="check_duplicate"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="crm_lead_configuration_view">
      <field name="name">crm.lead.form</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_form" />
      <field name="arch" type="xml">
         <xpath expr="//group[@name='lead_priority']//field[@name='tag_ids']" position="after">
            <field name="lead_status" invisible="1"/>
        </xpath>
      </field>
    </record>


</odoo>