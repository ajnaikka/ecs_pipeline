<odoo>
    <data>
        <template id="portal_my_home_menu_study_material_details" name="Portal layout : study material menu entries"
                  inherit_id="openeducat_core_enterprise.portal_breadcrumbs_inhetrite" priority="10">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <t t-if="user_id.sudo().is_student">
                    <li t-if="page_name == 'material_detail'"
                        t-attf-class="breadcrumb-item #{'active ' if not invoice else ''}">
                        <a t-if="material_ids" t-attf-href="/student/study_materials/?{{ keep_query() }}">Study Material</a>
                        <t t-else="">Study Material</t>
                    </li>
                    <li t-if="page_name == 'material_info' or material_info "
                        t-attf-class="breadcrumb-item #{'active ' if not material_info else ''}">
                        <a t-if="study_material_details_id" t-attf-href="/student/study_materials/#{student}/?{{ keep_query() }}">
                            Study Material
                        </a>
                        <t t-else="">Study Material</t>
                    </li>
                </t>

                <li t-if="study_material_details_id" class="breadcrumb-item active">
                    <span t-field="study_material_details_id.name"/>
                </li>
            </xpath>
        </template>

        <template id="flipbook_portal_menu_inherited" name="All Portal menu : Flipbook Details"
                  inherit_id="openeducat_web.new_portal_menu"
                  priority="10">
            <xpath expr="//t/a[hasclass('dashboard_element_main_body')]/div[hasclass('hover_effect')]"
                   position="before">
                <t t-if="'Study Material' in menu.name">
                    <div class="col-lg-12 text-right px-0">
                        <span class="badge badge-secondary badge-pill"
                              t-esc="material_count"/>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>