<odoo>
    <data>
        <template id="student_material_portal_list">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Study Material</t>
                </t>
                <t t-if="not material_ids">
                    <div class="alert alert-warning mt8" role="alert">
                        There are no records.
                    </div>
                </t>
                <t t-if="material_ids" t-call="portal.portal_table">
                    <thead>
                        <tr>
                            <th>Study Material</th>
                            <th>Course</th>
                            <th>Subject</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="material_ids" t-foreach="material_ids" t-as="material">
                            <tr>
                                <td>
                                    <a t-attf-href="/student/study_materials/data/#{stud_id}/#{material.id}">
                                        <span t-esc="material.name"/>
                                    </a>
                                </td>
                                <td>
                                    <span t-esc="material.course_id.name"/>
                                </td>
                                <td>
                                    <span t-esc="material.subject_id.name"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </t>
        </template>

        <template id="portal_study_material_details">
            <t t-call="portal.portal_layout">
                <t t-set="o_portal_fullwidth_alert" groups="project.group_project_user">
                    <t t-call="portal.portal_back_in_edit_mode">
                        <t t-set="backend_url"
                           t-value="'/web#model=op.exam&amp;id=%s&amp;view_type=form' % (meeting_id.id)"/>
                    </t>
                </t>
                <t t-call="portal.portal_record_layout">
                    <t t-set="card_header">
                        <h5 class="mb-0">
                            <small class="text-muted">Study Material</small>
                        </h5>
                    </t>
                </t>
                <div id="wrap" class="wrap o_wslides_wrap">
                    <div class="container o_wslides_home_main pb-5">
                        <div t-if="study_material_details_id.url" class="ratio ratio-4x3 embed-responsive-item mb8">
                            <iframe t-att-src="study_material_details_id.url" seamless="seamless" scrolling="no"
                                    frameborder="0" allowfullscreen="true" width="100%"
                                    class="o_wslides_iframe_viewer"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>